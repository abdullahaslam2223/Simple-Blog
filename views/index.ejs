<%- include('./partials/head.ejs') %>

    <body>

        <%- include('./partials/navbar.ejs') %>

            <div class="home-page">
                <h1 class="post-title">Latest Posts</h1>

                <hr class="divider" />

                <div class="blogs">
                    <% if(blogs.length> 0) { %>
                        <% blogs.map(blog=> { %>
                            <div class="single-blog">
                                <h1 class="single-title">
                                    <%= blog.title %>
                                </h1>
                                <p class="single-description">
                                    <% const excerpt=blog.description.slice(0, 180); %>
                                        <%= excerpt %>...
                                </p>
                                <span class="single-author">
                                    By <i>
                                        <%= blog.author %>
                                    </i>
                                </span>
                                <a href="/blogs/<%= blog._id %>" class="read-more">Read More</a>
                            </div>
                            <% }); %>
                                <% } else { %>
                                    <h1>There are no blogs to display...</h1>
                                    <% } %>
                </div>

            </div>
    </body>

    <%- include('./partials/footer.ejs') %>

        </html>