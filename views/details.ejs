<%- include('./partials/head.ejs') %>

    <body>

        <%- include('./partials/navbar.ejs') %>

            <div class="home-page">
                <h1 class="post-title">
                    <%= blog.title %>
                </h1>

                <hr class="divider" />

                <div class="blogs">
                    <div class="single-blog">
                        <h1 class="single-title">
                            <%= blog.title %>
                        </h1>
                        <p class="single-description">
                            <%= blog.description %>
                        </p>
                        <span class="single-author">
                            By <i>
                                <%= blog.author %>
                            </i>
                        </span>
                        <a onclick="deleteBlogByID()" id="deleteBlogByID" data-delete="<%= blog._id %>"
                            class="read-more">Delete</a>
                    </div>
                </div>

            </div>
    </body>

    <%- include('./partials/footer.ejs') %>

        <script>
            const deleteButton = document.getElementById('deleteBlogByID');
            const deleteBlogByID = () => {
                const endpoint = `/blogs/${deleteButton.dataset.delete}`;

                fetch(endpoint, { method: 'DELETE' })
                    .then(response => response.json())
                    .then(data => window.location.href = data.redirect)
                    .catch(error => console.log(error));

            }
        </script>



        </html>